<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SampleApp.DayNight" parent="Theme.SampleApp"/>

    <!-- Base application theme. -->
    <style name="Theme.SampleApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_blue_800</item>
        <item name="colorPrimaryVariant">@color/app_blue_800</item>
        <item name="colorSecondary">@color/app_orange_500</item>
        <item name="colorSecondaryVariant">@color/app_orange_600</item>

        <item name="android:colorBackground">@color/app_blue_50</item>
        <item name="colorSurface">@color/app_white_50</item>

        <item name="colorPrimarySurface">?attr/colorPrimary</item>
        <item name="colorError">@color/app_red_400</item>

        <item name="colorOnPrimary">@color/app_white_50</item>
        <item name="colorOnSecondary">@color/app_black_900</item>
        <item name="colorOnBackground">@color/app_black_900</item>
        <item name="colorOnSurface">@color/app_black_900</item>
        <item name="colorOnError">@color/app_white_50</item>

        <item name="scrimBackground">@color/app_white_50_alpha_060</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>

        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.SampleApp.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.SampleApp.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.SampleApp.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.SampleApp.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.SampleApp.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.SampleApp.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.SampleApp.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.SampleApp.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.SampleApp.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.SampleApp.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.SampleApp.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.SampleApp.Overline</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

</resources>